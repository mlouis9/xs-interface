# -----------------------------------------------------------------------------
#            INPUT EXAMPLE FOR A SINGLE CROSS SECTION TYPE
# -----------------------------------------------------------------------------


# -----------------------------------------------------------------------------
#                            SETTINGS
# -----------------------------------------------------------------------------


set settings 2 7
macro = infflx, inftranspxs, infrabsxs, infnsf, infkappa , infsp0, infchit, infInvv, infFiss, inftot
kinetics = lambda, betaeff

# -----------------------------------------------------------------------------
#                            STATES
# -----------------------------------------------------------------------------

set branches 1
dens 700.0 


set histories 1
nom 700.0

set times daysUnits
0.0


# -----------------------------------------------------------------------------
#                            DATA
# -----------------------------------------------------------------------------

# READ BY: SERPENT FILES

set labels 1
dens nom


# -----------------------------------------------------------------------------
#                            PERTURBATIONS
# -----------------------------------------------------------------------------


# No Data is provided by the user


# -----------------------------------------------------------------------------
#                         .COE SERPENT FILES
# -----------------------------------------------------------------------------

set serpent 1 +1 infFlx 10.0E+6, 0.6025, 0.0
nom  ./serpent/axial_th_res.m   # Note due to how control files are processed,
                                # filenames CANNOT be case-senstive


# -----------------------------------------------------------------------------
#                         DATA MANIPULATION
# -----------------------------------------------------------------------------

set manipulate 10.0E+6, 0.6025, 0.0
fissmev, infFiss, infKappa, multiply
fissjoule, fissmev, 1.60218e-13, multiply
nsftoabs, infnsf, infrabsxs, divide

# -----------------------------------------------------------------------------
#                         FILTER DATA & PRINT
# -----------------------------------------------------------------------------


# n/a

