nom 700.0

set times daysUnits
0.0


# -----------------------------------------------------------------------------
#                            DATA
# -----------------------------------------------------------------------------

# READ BY: SERPENT FILES

set labels 1
dens nom


# -----------------------------------------------------------------------------
#                            PERTURBATIONS
# -----------------------------------------------------------------------------


# No Data is provided by the user


# -----------------------------------------------------------------------------
#                         .COE SERPENT FILES
# -----------------------------------------------------------------------------

set serpent 1 +1 infFlx 10.0E+6, 0.6025, 0.0
nom  ./inputs/bwr_rho1_2gr_res.m


# -----------------------------------------------------------------------------
#                         DATA MANIPULATION
