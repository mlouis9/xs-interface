# -----------------------------------------------------------------------------
#            INPUT EXAMPLE FOR A SINGLE CROSS SECTION TYPE
# -----------------------------------------------------------------------------


# -----------------------------------------------------------------------------
#                            SETTINGS
# -----------------------------------------------------------------------------


set settings 2 7
macro = fission, total, fission_spectrum, kappa_fission, nu_fission, reduced_absorption, transport, scattering_matrix0, scattering_matrix1, coarse_flux

# -----------------------------------------------------------------------------
#                            STATES
# -----------------------------------------------------------------------------

set branches 1
dens 700.0 


set histories 1
nom 700

set times nounits
0.0


# -----------------------------------------------------------------------------
#                            DATA
# -----------------------------------------------------------------------------

# READ BY: SERPENT FILES

set labels 1
dens nom



# -----------------------------------------------------------------------------
#                            PERTURBATIONS
# -----------------------------------------------------------------------------

# N/A

# -----------------------------------------------------------------------------
#                         .COE SERPENT FILES
# -----------------------------------------------------------------------------

set shift 1 3 coarse_flux 15.0E+6, 0.6025, 0.0
nom 0.0 700.0  .\pwr.out.h5



# -----------------------------------------------------------------------------
#                         DATA MANIPULATION
# -----------------------------------------------------------------------------

set manipulate 0.6025
kappa_fission_joule, kappa_fission, 1.60218e-13, multiply
new_sp0, scattering_matrix0, transpose
new_sp1, scattering_matrix1, transpose
infscattp0, total, reduced_absorption, subtract



# -----------------------------------------------------------------------------
#                         FILTER DATA & PRINT
# -----------------------------------------------------------------------------


# n/a

