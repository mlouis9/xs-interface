# -----------------------------------------------------------------------------
#                            SETTINGS
# -----------------------------------------------------------------------------


set settings 2 7
macro =  infKappa, infSp0, cmmTranspxs, infFlx
kinetics =  lambda

# -----------------------------------------------------------------------------
#                            STATES
# -----------------------------------------------------------------------------

set branches 4
dens 640.0, 700.0, 725.0, 760.0
boron 0.0, 750.0, 1500.0 
fuel 600, 900, 1200
crods 0, 1 


set histories 1
nom 700.0, 900.0, 750.0, 0

set times nounits
0.0, 0.1, 1.0


# -----------------------------------------------------------------------------
#                            DATA
# -----------------------------------------------------------------------------

# READ BY: SERPENT FILES

set labels 4
dens RHOm1, nom, RHOp1, RHOp2
boron BORm1, nom, BORp1
fuel TFUm1, nom, TFUp1
crods nom, CRin



# -----------------------------------------------------------------------------
#                            PERTURBATIONS
# -----------------------------------------------------------------------------



# -----------------------------------------------------------------------------
#                         .COE SERPENT FILES
