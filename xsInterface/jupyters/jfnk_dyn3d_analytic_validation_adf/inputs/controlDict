# -----------------------------------------------------------------------------
#            CONTROL DICT
# -----------------------------------------------------------------------------



# -----------------------------------------------------------------------------
#                            FILES TO READ
# -----------------------------------------------------------------------------


set universes
u .\inputs\univs


# -----------------------------------------------------------------------------
#                            Serpent output files
# -----------------------------------------------------------------------------


set serpent
u C02 B01 RR4



# -----------------------------------------------------------------------------
#                            TEMPLATE FILES
# -----------------------------------------------------------------------------

set templates
template0 .\inputs\template_dyn3d_2g_fuel
template1 .\inputs\template_dyn3d_2g_refl

# -----------------------------------------------------------------------------
#                            OUTPUT FILES
# -----------------------------------------------------------------------------

set outputs
template0 .\dyn3d\xs\xs_
template1 .\dyn3d\xs\xs_

# -----------------------------------------------------------------------------
#                           UNIVERSE-TO-FILES LINKS 
# -----------------------------------------------------------------------------

set links
template0 uC02 uB01
template1 uRR4

# -----------------------------------------------------------------------------
#                            FORMAT
# -----------------------------------------------------------------------------

set formats 8 _2g_4sides.xs22
state 5.5f
attr 6.6e
var d


# -----------------------------------------------------------------------------
#                            CHANNELS & MAP
# -----------------------------------------------------------------------------

set map 0 0
		B01 C01
		C02 RR4

  
set channels
C01 uC02
C02 uC02
B01 uB01
RR4 uRR4


set volumes
C01 2
C02 2
B01 1
RR4 1