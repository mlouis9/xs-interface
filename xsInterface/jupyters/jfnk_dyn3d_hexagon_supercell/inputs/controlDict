# -----------------------------------------------------------------------------
#            CONTROL DICT
# -----------------------------------------------------------------------------



# -----------------------------------------------------------------------------
#                            FILES TO READ
# -----------------------------------------------------------------------------


set universes
u ./inputs/univs


# -----------------------------------------------------------------------------
#                            Serpent output files
# -----------------------------------------------------------------------------


set serpent
u M1 F1



# -----------------------------------------------------------------------------
#                            TEMPLATE FILES
# -----------------------------------------------------------------------------

set templates
template0 ./inputs/template_dyn3d_2g_fuel


# -----------------------------------------------------------------------------
#                            OUTPUT FILES
# -----------------------------------------------------------------------------

set outputs
template0 ./dyn3d/xs/xs_

# -----------------------------------------------------------------------------
#                           UNIVERSE-TO-FILES LINKS 
# -----------------------------------------------------------------------------

set links
template0 uM1 uF1

# -----------------------------------------------------------------------------
#                            FORMAT
# -----------------------------------------------------------------------------

set formats 8 .dat
state 5.5f
attr 6.6e
var d


# -----------------------------------------------------------------------------
#                            CHANNELS & MAP
# -----------------------------------------------------------------------------

set map 0 -1 0
   S2  S2
 S2  S1  S2
   S2  S2
  
set channels
S1 uM1
S2 uF1


set volumes
S1 1
S2 6


