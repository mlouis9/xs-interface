# -----------------------------------------------------------------------------
#            INPUT EXAMPLE FOR A SINGLE CROSS SECTION TYPE
# -----------------------------------------------------------------------------


# -----------------------------------------------------------------------------
#                            SETTINGS
# -----------------------------------------------------------------------------


set settings 2 6
macro = infflx, absxs

# -----------------------------------------------------------------------------
#                            STATES
# -----------------------------------------------------------------------------

set branches 1
boron 0.0  1000


set histories 1
nom 0.0

set times daysUnits
0.0


# -----------------------------------------------------------------------------
#                            DATA
# -----------------------------------------------------------------------------

set data infflx 10.0E+6, 0.6025, 0.0
#-------------
block state
#----------
branch 0.0
history nom
time 0.0

#-------------
block macro
#----------
infflx = 10 20
absxs = 0.1, 0.2


set data infflx 10.0E+6, 0.6025, 0.0
#-------------
block state
#----------
branch 1000
history nom
time 0.0

#-------------
block macro
#----------
infflx = 10 20
absxs = 0.1, 0.2



# -----------------------------------------------------------------------------
#                            PERTURBATIONS
# -----------------------------------------------------------------------------


# No Data is provided by the user





# -----------------------------------------------------------------------------
#                         DATA MANIPULATION
# -----------------------------------------------------------------------------

# N/A


# -----------------------------------------------------------------------------
#                         FILTER DATA & PRINT
# -----------------------------------------------------------------------------


# n/a
set filter 1 1 1 0
boron 1000
nom
0.0
